@{
  Layout = "_Layout";
}

@using SweetNSavory.Models;
@model List<SweetNSavory.Models.Ingredient>;

<h1>Ingredients</h1>

<ul>
  @foreach(Ingredient ingredient in Model)
  {
    <li>@Html.ActionLink($"{ingredient.Name}", "Details", new { id = ingredient.IngredientId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new ingredient", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>